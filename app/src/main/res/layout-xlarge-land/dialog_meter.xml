<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/dialog_title"
        android:id="@+id/height_title"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:gravity="center_vertical|center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/editHeight"
        android:textSize="30dp"
        android:focusable="true"
        android:visibility="visible"
        android:layout_below="@+id/height_title"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Розрахувати"
        android:id="@+id/button"
        android:layout_below="@+id/editLength"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/dial_str1"
        android:id="@+id/length_title"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:gravity="center_vertical|center"
        android:layout_below="@+id/editHeight"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/editLength"
        android:textSize="30dp"
        android:focusable="true"
        android:visibility="visible"
        android:layout_below="@+id/length_title"
        android:layout_alignLeft="@+id/editHeight" />


</RelativeLayout>