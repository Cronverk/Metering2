<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Вiдстань до дерева"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="69dp"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/editHeight"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:focusable="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioHeight"
        android:layout_below="@+id/editHeight"
        android:layout_alignLeft="@+id/editHeight"
        android:layout_alignStart="@+id/editHeight">

    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Почати вимірювання"
        android:id="@+id/buttonOk"
        android:layout_gravity="center_horizontal"
        style="@style/AlertDialog.AppCompat"
        android:textSize="35dp"
        android:layout_below="@+id/butDal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/but_dalek"
        android:id="@+id/butDal"
        android:layout_below="@+id/editHeight"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        style="@style/AlertDialog.AppCompat" />


</RelativeLayout>