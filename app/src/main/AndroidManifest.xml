<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.grass.metering2">

    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.AppCompat.Light">
        <activity android:name=".MeteringActivity"
            android:screenOrientation="reverseLandscape">
         </activity>

        <activity android:name=".Splash"
            android:label="@string/app_name"
            android:screenOrientation="reverseLandscape">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".DalnometerActivity"
            android:screenOrientation="reverseLandscape"></activity>
        <activity android:name=".calibration.CalibrationActivity"
            android:screenOrientation="reverseLandscape"></activity>
        <activity android:name=".calibration.DalCalibrActivity"
            android:screenOrientation="reverseLandscape"></activity>


    </application>

</manifest>
